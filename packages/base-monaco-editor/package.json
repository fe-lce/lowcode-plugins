{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@felce/lowcode-plugin-base-monaco-editor",
  "version": "1.3.0-beta.4",
  "description": "代码编辑组件，monaco-editor 的低代码适配封装",
  "files": [
    "dist/"
  ],
  "main": "src/index.ts",
  "module": "src/index.ts",
  "style": "src/index.less",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "stylelint": "stylelint \"**/*.{css,scss,less}\"",
    "prepublishOnly": "pnpm run build",
    "pub": "npm version patch && pnpm publish",
    "pub:major": "npm version major && pnpm publish",
    "pub:minor": "npm version minor && pnpm publish",
    "pub:patch": "npm version patch && pnpm publish",
    "pub:premajor": "npm version premajor --preid beta && pnpm publish --tag beta",
    "pub:preminor": "npm version preminor --preid beta && pnpm publish --tag beta",
    "pub:prepatch": "npm version prepatch --preid beta && pnpm publish --tag beta",
    "pub:prerelease": "npm version prerelease --preid beta && pnpm publish --tag beta"
  },
  "keywords": [
    "react",
    "component",
    "monaco",
    "lowcode",
    "felce"
  ],
  "dependencies": {
    "@monaco-editor/loader": "1.3.0",
    "classnames": "^2.3.1",
    "monaco-editor": "^0.52.2",
    "react": "^18.3.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "f2elint": "^1.2.0",
    "vite": "^6.0.6",
    "@vitejs/plugin-react-swc": "3.7.1",
    "vite-plugin-dts": "^4.3.0"
  },
  "componentConfig": {
    "name": "Monaco Editor 组件",
    "title": "代码编辑器组件",
    "category": "Information"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "main": "./dist/index.es.js",
    "module": "./dist/index.umd.js",
    "types": "./dist/index.d.ts"
  },
  "homepage": "https://unpkg.com/@felce/lowcode-plugin-base-monaco-editor@1.3.0-beta.1/build/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/fe-lce/lowcode-plugins.git",
    "directory": "packages/base-monaco-editor"
  }
}
