{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@felce/lowcode-plugin-base-monaco-editor",
  "version": "1.3.0-beta.1",
  "description": "代码编辑组件，monaco-editor 的低代码适配封装",
  "files": [
    "dist/"
  ],
  "main": "src/index.ts",
  "module": "src/index.ts",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "eslint": "eslint --cache --ext .js,.jsx ./",
    "eslint:fix": "pnpm run eslint -- --fix",
    "stylelint": "stylelint \"**/*.{css,scss,less}\"",
    "lint": "pnpm run eslint && pnpm run stylelint",
    "f2elint-scan": "f2elint scan",
    "f2elint-fix": "f2elint fix"
  },
  "keywords": [
    "react",
    "component"
  ],
  "dependencies": {
    "@monaco-editor/loader": "1.3.0",
    "classnames": "^2.3.1",
    "monaco-editor": "^0.31.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "f2elint": "^1.2.0",
    "vite": "^6.0.6",
    "@vitejs/plugin-react-swc": "3.7.1",
    "vite-plugin-dts": "^4.3.0",
    "lodash": "4.17.21"
  },
  "componentConfig": {
    "name": "Monaco Editor 组件",
    "title": "代码编辑器组件",
    "category": "Information"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "f2elint commit-file-scan",
      "commit-msg": "f2elint commit-msg-scan"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "main": "./dist/index.es.js",
    "module": "./dist/index.umd.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.es.js",
        "require": "./dist/index.umd.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "homepage": "https://unpkg.com/@felce/lowcode-plugin-base-monaco-editor@1.3.0-beta.1/build/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/fe-lce/lowcode-plugins.git",
    "directory": "packages/base-monaco-editor"
  }
}
